<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/recipe_saved_url_text"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:text="@string/recipe_source_url"
        app:layout_constraintBottom_toBottomOf="@+id/recipe_saved_title_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recipe_saved_title_text"
        app:layout_constraintTop_toTopOf="@+id/recipe_saved_title_text"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/recipe_result_image"
        android:layout_width="48dp"
        android:layout_height="49dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/recipe_saved_title_text"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="@string/recipe_result_title"
        app:layout_constraintBottom_toBottomOf="@+id/recipe_result_image"
        app:layout_constraintStart_toEndOf="@+id/recipe_result_image"
        app:layout_constraintTop_toTopOf="@+id/recipe_result_image" />

</androidx.constraintlayout.widget.ConstraintLayout>