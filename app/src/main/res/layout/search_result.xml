<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/recipe_result_image"
        android:layout_width="48dp"
        android:layout_height="49dp"
        app:layout_constraintBottom_toBottomOf="@+id/recipe_title_text"
        app:layout_constraintStart_toEndOf="@+id/recipe_title_text"
        app:layout_constraintTop_toTopOf="@+id/recipe_title_text"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/recipe_result_id_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/recipe_id"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/recipe_result_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recipe_result_image"
        app:layout_constraintTop_toTopOf="@+id/recipe_result_image"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/recipe_title_text"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/recipe_title"
        app:layout_constraintBottom_toBottomOf="@+id/recipe_result_image"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>